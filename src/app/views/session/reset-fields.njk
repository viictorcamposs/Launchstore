<div class="item">
	<div>Email</div>
	<div class="input">
		<input 
		type="email" 
		name="email" 
		value="{{ user.email }}"
        placeholder="Digite seu email"
		onblur="Validate.apply(this, 'isEmail')">
	</div> 
</div>

<div class="password">	
	<div class="item">
		<div>Nova senha</div>
		<div class="input">
			<input 
                type="password" 
                name="password"
                placeholder="Digite sua nova senha"> 
		</div> 
	</div>
	
	<div class="item">
		<div>Repetir senha</div>
		<div class="input">
			<input 
                type="password" 
                name="passwordRepeat"
                placeholder="Confirmar senha"> 
		</div> 
	</div>
</div>

<input type="hidden" name="token" value="{{ token }}">