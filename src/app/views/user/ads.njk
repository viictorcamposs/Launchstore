{% extends 'layout.njk' %}
{% import 'parts/card.njk' as cards %}

{% block head %}
    <link rel="stylesheet" href="/styles/users/create.css">
    <link rel="stylesheet" href="/styles/products/edit.css">
{% endblock %}

{% block content %}
   {% call cards.render('Meus An√∫ncios', 'users-ads container') %}
   
        <div class="items">
            {% for product in products %}
                <div class="item">
                    <div class="image"
                        style="background-image: url({{product.img}})"
                    >
                    </div>
                    <div class="info">
                        <div class="title">{{product.name}}</div>
                        <div class="price">{{product.formatedPrice}}</div>
                        <div class="published">Publicado em: {{product.formatedCreatedAt}}</div>
                    
                        <div class="actions">
                            <a href="/products/{{product.id}}/edit">Editar</a>
                            <a href="/products/{{product.id}}">Ver</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
   
   {% endcall %}
{% endblock %}